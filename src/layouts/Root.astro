---
import "../styles/global.css";
import Sidebar from "../components/Sidebar.svelte";
import Background from "../components/Background.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <!-- Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
    />

    <!-- SEO -->
    <title>Vladimir Beliaev | Full Stack Engineer</title>
    <meta
      name="description"
      content="Portfolio of Vladimir Beliaev (aka plw). Full Stack Engineer specializing in ML/DS background, WebDev, Backend, and LLM integrations."
    />
    <meta name="author" content="Vladimir Beliaev" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://vladimirbeliaev.com/" />
    <meta
      property="og:title"
      content="Vladimir Beliaev | Full Stack Engineer"
    />
    <meta
      property="og:description"
      content="Full Stack Engineer with ML/DS background. Building high-quality prototypes and scalable systems."
    />
    <meta
      property="og:image"
      content="https://placehold.co/1200x630/2563eb/ffffff?text=Vladimir+Beliaev"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://vladimirbeliaev.com/" />
    <meta
      property="twitter:title"
      content="Vladimir Beliaev | Full Stack Engineer"
    />
    <meta
      property="twitter:description"
      content="Full Stack Engineer with ML/DS background. Building high-quality prototypes and scalable systems."
    />
    <meta
      property="twitter:image"
      content="https://placehold.co/1200x630/2563eb/ffffff?text=Vladimir+Beliaev"
    />

    <meta name="theme-color" content="#ffffff" />
    <script is:inline>
      const theme = localStorage.getItem("theme") || "LIGHT";
      document.documentElement.setAttribute("data-theme", theme);
      const themeColor = theme === "DARK" ? "#0a0a0a" : "#fcfcfc";
      document
        .querySelector('meta[name="theme-color"]')
        .setAttribute("content", themeColor);
    </script>
  </head>
  <body class="min-h-dvh flex flex-col md:flex-row overflow-hidden bg-base-100">
    <Sidebar client:load />
    <Background />
    <main class="flex-1 h-dvh relative">
      <slot />
    </main>
  </body>
</html>
